doctype html
html
  head
      block head
        title= title
        link(rel='stylesheet' href='/stylesheets/reset.css')
        link(rel='stylesheet' href='/stylesheets/navbar.css')
        link(rel='stylesheet' href='/stylesheets/hobbies.css')
        link(rel='stylesheet' href='/stylesheets/register-and-login.css')

        script(src="/javascripts/navbar.js" role="module")
        script(src="/javascripts/navbar.js" defer)


  body
    div(class="navbar")
      nav(class="navbar__nav")
        img(href="" class="" id="hobby-hub-logo" alt="Hobby Hub logo")
        ul(class="" id="navigation-links")
          li: a(href="/" class="navbar__nav") Home
          //- My Wheelhouse redirects to /login when user not logged in
          if req.session.auth
            li: a(href=`/users/${req.session.auth.userId}/wheelhouse` class="navbar__nav") My Wheelhouse
          else
            li: a(href="/users/login" class="navbar__nav") My Wheelhouse
          li: a(href="/hobbies" class="navbar__nav") Hobbies
        div(class="" id="user-buttons")
          //- if the user is logged in
          if req.session.auth
            form(action="/users/logout", method="get")
              button(class="navbar__button" id="logout-button") Logout
          else
            a(href="/users/login")
              button(class="navbar__button" id="login-button") Login
            a(href="/users/register")
              button(class="navbar__button" id="signup-button") Sign Up
            button(class="navbar__button" id="demo-user-button") Demo User
    block content

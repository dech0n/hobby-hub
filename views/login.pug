extends layout.pug
include utils.pug

block content
    h1.login_header.header= title
    +validationErrorSummary(errors).error_messages

    .formDiv
        form(action="/users/login" method="post" class="login_form")
            input(type="hidden", name="_csrf", value=csrfToken)
            +field('Username', 'username', username).form__input_field
            +field('Password', 'password', null, 'password').form__input_field
            button(type='submit' class="form__button form__submit_button") Submit

extends layout.pug

append head
  link(rel="stylesheet" href="../stylesheets/hobby.css")
block content
  div(id="hobby-page")
    button(class="button") Back
    div(class="hobby-header-container")
      img(src=hobby.img alt="illustration of the hobby")
      div(id="title-description")
        h1= hobby.title
        p= hobby.description
    div(class="status-dropdown")
      //- if user is logged in, add wheelhouse status dropdown
      if user
        select(name="status" placeholder="Add to wheelhouse")
          //- option Add to wheelhouse
          each wheelhouse in user.wheelhouses
            option(value=wheelhouse.status)= wheelhouse.status
        button(class="button status-button") Add to Wheelhouse
    div(id="experiences-container")
      each experience in experiences
        div(class="experiences-container__experience")
          //- div(class="experience-header")
          p(class="experience-user")= experience.User.username
          p(class="experience-title")= experience.title
          p(class="experience-message")= experience.message
